<p id="notice"><%= notice %></p>

<h1>My Quests</h1>

<p>This page will show the list of quests the User is eligible to complete as a participant</p>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Start date</th>
      <th>Start time</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quests.each do |quest| %>
      <tr>
        <td><%= quest.name %></td>
        <td><%= quest.description %></td>
        <td><%= quest.start_date %></td>
        <td><%= quest.start_time %></td>
        <td><%= link_to 'Show', quest %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', quests_path %>
<%= link_to 'Home', users_path %>
