<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Task</th>
      <th>Answer</th>
      <th>Clue1</th>
      <th>Clue2</th>
      <th>Clue3</th>
      <th>Clue time</th>
      <th>Answer comment</th>
      <th>Skip comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.task %></td>
        <td><%= task.answer %></td>
        <td><%= task.clue1 %></td>
        <td><%= task.clue2 %></td>
        <td><%= task.clue3 %></td>
        <td><%= task.clue_time %></td>
        <td><%= task.answer_comment %></td>
        <td><%= task.skip_comment %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
